<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/head_my"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@color/theme_color">
            <com.meg7.widget.CircleImageView
                android:id="@+id/personal_img"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:src="@drawable/mrtx_pic"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dip"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/personal_img"
                android:layout_marginTop="22dip"
                android:layout_marginLeft="10dip">
                <TextView
                    android:id="@+id/username_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dip">
                    <TextView
                        android:id="@+id/phone_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请点击登录"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/address_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dip"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/img_my_fragment_login_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mypublish"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            >
            <ImageView
                android:id="@+id/personal_img1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:src="@drawable/img_my_fragment_release_left"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MyRelease"
                android:layout_toRightOf="@id/personal_img1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/img_my_fragment_title_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/personal_line_color"/>
