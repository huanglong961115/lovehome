<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dip"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_mymessage"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:src="@drawable/my_msg_icon"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="15dip">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textColor="@color/black"
                android:text="@string/publish_mymessage"
                />
            <TextView
                android:id="@+id/name_mymessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textColor="@color/black"
                android:text=""
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textColor="@color/black"
                android:text="@string/publish2_mymessage"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dip"
            android:textColor="@color/gray"
            android:text="@string/passnot_mymessage"
            android:layout_marginTop="20dip"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="15dip">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/time1_mymessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textColor="@color/gray"
                android:text="2016-07-16"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/time2_mymessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:textColor="@color/gray"
                android:text="05:47:25"
                android:singleLine="true"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/read_mymessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:textColor="@color/red"
            android:layout_gravity="right"
            android:text="已读"
            android:layout_marginTop="20dip"
            />
    </LinearLayout>
</LinearLayout>
