<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
   android:gravity="center_vertical"
    android:background="@color/navbar_selector_color"
    android:layout_height="45dp">
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/aojiang"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:drawableRight="@drawable/area_icon"
        android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/serach_text"
      android:layout_width="wrap_content"
      android:gravity="center_vertical"
     android:hint="@string/search_good"
      android:drawableLeft="@drawable/search"
      android:paddingLeft="20dp"
      android:textColor="@color/white"
      android:textColorHint="@color/white"
      android:layout_weight="1"
      android:drawablePadding="5dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/search_bg"
      android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_weight="4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/message"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/message"
            android:layout_alignParentRight="true" />
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/messgeCount"
            android:background="@drawable/img_my_msg_num"
            android:visibility="gone"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginTop="3.0dip"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>